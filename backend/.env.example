# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGO_URI=mongodb://localhost:27017/schoolpay-enterprise
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/schoolpay?retryWrites=true&w=majority

# JWT Secret (Generate a random string)
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# M-PESA Daraja API (Safaricom)
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_PASSKEY=your_passkey
MPESA_SHORTCODE=your_paybill_or_till_number
MPESA_CALLBACK_URL=https://yourdomain.com/api/payments/mpesa/callback

# Africa's Talking SMS API
AFRICASTALKING_API_KEY=your_api_key
AFRICASTALKING_USERNAME=your_username
AFRICASTALKING_SENDER_ID=SCHOOLPAY

# Bank Integration (Optional)
BANK_API_URL=https://bank-api.example.com
BANK_API_KEY=your_bank_api_key